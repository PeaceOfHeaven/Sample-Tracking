<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.Design.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="bottomSheetDialogTheme">@style/MyAppCompatDialog</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
    </style>

    <style name="control_style">
        <item name="android:layout_marginLeft">@dimen/card_content_padding</item>
        <item name="android:layout_marginRight">@dimen/card_content_padding</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

</resources>